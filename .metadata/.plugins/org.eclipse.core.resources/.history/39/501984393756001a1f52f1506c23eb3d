package javaPrograms;

public class PallindromeDemo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		String a="ajay";
		
		
		    String rev="";
		    
		     for(int i=a.length()-1;i>=0;i--)
		     {
		    	 rev=rev+a.charAt(i);
		     }
	
		     System.out.println(rev);		     
	}

}
